# Database Connection
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Admin authentication password (bcrypt hash)
# Generate with: node -e "console.log(require('bcryptjs').hashSync('YourPassword', 10))"
ADMIN_PASSWORD_HASH=

# JWT Secret for token signing
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Resend API Key for sending emails
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=

# Email "from" address (must be verified in Resend)
RESEND_FROM_EMAIL=forms@yourdomain.com

# Email Allowlist (optional) - Comma-separated list of allowed email domains
# Leave empty to allow all email addresses, or specify domains like: yourdomain.com,example.com
EMAIL_ALLOWLIST=

# NextAuth.js Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Production URL for your application (required for OAuth callbacks)
NEXTAUTH_URL=https://yourdomain.com

# Procore OAuth Configuration
# Get these from your Procore Developer Portal: https://developers.procore.com/
# 1. Create a new app in the Procore Developer Portal
# 2. Set the redirect URI to: https://yourdomain.com/api/auth/callback/procore
# 3. Copy the Client ID and Client Secret here
PROCORE_CLIENT_ID=
PROCORE_CLIENT_SECRET=
