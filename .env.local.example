# Neon Postgres Database URL
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# JWT Secret for token signing (REQUIRED - minimum 32 characters)
# Generate a strong random secret for production
# Example: openssl rand -base64 32
# WARNING: Application will not start without this being set
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this

# Admin authentication password hash (REQUIRED)
# Generate a bcrypt hash of your admin password using:
# node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
#
# Example command to generate hash for password "MySecurePassword123":
# node -e "console.log(require('bcryptjs').hashSync('MySecurePassword123', 10))"
#
# NEVER store plain text passwords - always use the bcrypt hash
ADMIN_PASSWORD_HASH=$2a$10$example.hash.here.replace.with.your.own.generated.hash

# Resend API Key for sending emails (get from https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# Email "from" address (must be verified in Resend)
RESEND_FROM_EMAIL=forms@yourdomain.com

# Email Allowlist (optional) - Comma-separated list of allowed email domains
# Leave empty to allow all email addresses
# Example: EMAIL_ALLOWLIST=example.com,company.com,client.com
EMAIL_ALLOWLIST=

# Vercel Blob Storage (REQUIRED for file uploads)
# Get your token from Vercel Dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here
